<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    >

    <ImageView
        android:layout_width="230dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/senai_logo"
        />

    <ImageView
        android:id="@+id/foto_confirm_email"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textSize="32sp"
        android:textColor="@color/red_light"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginTitle"
        android:text="Confirme seu Email!"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="60dp"

        />

    <EditText
        android:fontFamily="@font/poppins"
        android:id="@+id/email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:padding="14dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/container_input_login"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="40dp"
        />

    <Button
        android:fontFamily="@font/poppins"
        android:id="@+id/buttonConfirmEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/blue"
        android:onClick="entrar"
        />

    <ProgressBar
        android:id="@+id/progress_bar_load"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="20"
        android:visibility="invisible"/>


</LinearLayout>