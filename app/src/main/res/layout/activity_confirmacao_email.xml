<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    >

    <View
        android:id="@+id/containerLogin"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/container_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="235dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/senai_logo"
        />

    <ImageView
        android:id="@+id/foto_confirm_email"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textSize="32sp"
        android:textColor="@color/red_light"
        android:textStyle="bold"
        android:layout_marginTop="48sp"
        app:layout_constraintTop_toTopOf="@id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"
        />

    <TextView
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginTitle"
        android:text="Confirme seu Email!"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="185sp"
        app:layout_constraintTop_toTopOf="@id/containerLogin"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"
        />


    <EditText
        android:fontFamily="@font/poppins"
        android:id="@+id/email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:padding="14dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/container_input_login"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/loginTitle"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"
        />

    <Button
        android:fontFamily="@font/poppins"
        android:id="@+id/buttonConfirmEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/email_confirm"
        app:layout_constraintStart_toStartOf="@id/containerLogin"
        app:layout_constraintEnd_toEndOf="@id/containerLogin"
        app:layout_constraintBottom_toBottomOf="@id/containerLogin"
        android:onClick="entrar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>