<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InitialFragment"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    >


    <TextView
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textSize="28dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="24dp"
        android:layout_height="42dp"
        android:text="Dúvidas Frequentes"
        android:textColor="@color/white"
        />

    <Button
        android:fontFamily="@font/poppins"
        android:background="@drawable/button_shape"
        android:textAlignment="textStart"
        android:text="Recuperar senha"
        android:id="@+id/recuperar_senha"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/solicitar_carteirinha"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins"
        android:text="Como solicitar carteirinha física?"
        android:textAlignment="textStart"
        />

    <Button
        android:fontFamily="@font/poppins"
        android:textAlignment="textStart"
        android:text="Privacidade"
        android:id="@+id/privacidade"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:fontFamily="@font/poppins"
        android:textAlignment="textStart"
        android:text="Alterar foto de perfil"
        android:id="@+id/alterar_foto_perfil"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:fontFamily="@font/poppins"
        android:textAlignment="textStart"
        android:text="Como alterar tema?"
        android:id="@+id/como_alterar_tema"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>