<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InitialFragment"
    android:orientation="vertical"
    android:gravity="center"
    >


    <TextView
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textSize="28dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="24dp"
        android:layout_height="42dp"
        android:text="Dúvidas Frequentes"
        android:textColor="@color/white"
        android:backgroundTint="@null"
        />


    <Button
        android:id="@+id/recuperar_senha"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:paddingStart="12dp"
        android:textColor="@color/white_light"
        android:text="Como recuperar senha"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:backgroundTint="@null"
        />

    <Button
        android:id="@+id/solicitar_carteirinha"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/baseline_add_card_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:paddingStart="12dp"
        android:textColor="@color/white_light"
        android:text="Como solicitar carteirinha física"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:backgroundTint="@null"
        />

    <Button
        android:id="@+id/termos_privacidade"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:paddingStart="12dp"
        android:textColor="@color/white_light"
        android:text="Termos de privacidade"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:backgroundTint="@null"
        />

    <Button
        android:id="@+id/alterar_foto_perfil"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:paddingStart="12dp"
        android:textColor="@color/white_light"
        android:text="Como alterar foto de perfil"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:backgroundTint="@null"
        />

    <Button
        android:id="@+id/alterar_tema"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/baseline_dark_mode_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:paddingStart="12dp"
        android:textColor="@color/white_light"
        android:text="Como alterar o tema do app"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:backgroundTint="@null"
        />


</LinearLayout>