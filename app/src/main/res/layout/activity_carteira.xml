<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityCarteira"
    android:background="@drawable/gradient_background">

    <Button
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/xiszao">
    </Button>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:rotation="90"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:layout_gravity="center"
        android:layout_marginTop="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/senai_logo"/>

            <Space
                android:layout_width="40dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/nomeUser"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Amanda de Morais Maldonado"
                android:textSize="24sp"
                android:fontFamily="@font/poppins"/>

            <Space
                android:layout_width="40dp"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/fotoUser"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="Matrícula: "
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/matriculaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="00000000000000000000"
                android:fontFamily="@font/poppins"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="Data de Nascimento: "
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/dataUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="DD/MM/YYYY"
                android:fontFamily="@font/poppins"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="0dp">
            </Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="CPF: "
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/cpfUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="000.000.000-00"
                android:fontFamily="@font/poppins"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="Curso: "
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/cursoUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="Técnico em Desenvolvimento de Sistemas"
                android:fontFamily="@font/poppins"/>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>